#include "super.h"


static inline void SET_CHIRP_LED1(){ sbi(PORTC , 3 );}
static inline void CLR_CHIRP_LED1(){ cbi(PORTC , 3 );}
static inline char READ_CHIRP_LED1(){ return 0x01 & (inp(PINC ) >> 3 );}
