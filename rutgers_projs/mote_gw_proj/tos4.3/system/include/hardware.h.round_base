static inline void SET_PIN_DIRECTIONS(){
         outp(0x00, DDRA);
         outp(0x00, DDRB);
         outp(0x00, DDRC);
         outp(0x00, DDRD);
        sbi(DDRC , 3 );
        sbi(DDRC , 4 );
        sbi(DDRC , 5 );
        sbi(DDRB , 0 );
        sbi(DDRB , 2 );
        sbi(DDRB , 1 );
        sbi(DDRD , 4 );
}


